
<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
      </p>

      <div class="prototype__image">
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
            <h3>BOSSの名前            </h3><%= @prototype.errortittle.name%>
            <h3>BOSSの住所            </h3> <%= @prototype.folder.name%>
            <h3>BOSSのレベル           </h3><%= @prototype.level.name%>
            <h3>BOSSが出現したコード    </h3><%= @prototype.title %>
          <br>
           <br>
          <p class="detail__title">BOSSの倒し方</p>
          <br>
          <br>

          <p class="detail__message">
            <%= @prototype.catch_copy %>
          </p>
          <br>
          <br>
          <br>

          <%# プロトタイプの投稿者とログインしているユーザーが同じであれば以下を表示する %>
          <% if user_signed_in? && current_user.id == @prototype.user_id %>
            <div class="prototype__manage">
              <%= link_to "変更する", edit_prototype_path(@prototype.id), class: :prototype__btn %>
              <%= link_to "消す", prototype_path(@prototype.id), class: :prototype__btn, method: :delete %>
            </div>
          <% end %>
          <%# // プロトタイプの投稿者とログインしているユーザーが同じであれば上記を表示する %>
          <%= link_to "by #{@prototype.user.name}", user_path(@prototype.user.id), class: :prototype__user,method: :get %>
        </div>
      </div>
      <div class="prototype__comments">
        <% if user_signed_in? %>
          <%= form_with(model: [@prototype,@comment], local: true) do |f| %>
            <div class="field">
              <%= f.label :text, "陰口" %><br />
              <%= f.text_field :text %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %>
        
        <% end %>
        <ul class="comments_lists">
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
            <li class="comments_list">
              <%# <%= " コメントのテキスト "%>
              <% @comments.each do |comment| %>
                  <p>
                       <%= comment.text %>
                       <strong><%= link_to "#{@prototype.user.name}", prototype_path(@prototype.id), class: :comment_user %></strong>
                       
                  </p>
              <% end %>
              <%# <%= link_to "（ ユーザー名 ）", root_path, class: :comment_user %>
            </li>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>
